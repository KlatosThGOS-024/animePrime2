{
  "compilerOptions": {
    "outDir": "./dist", // ✅ Output transpiled JS here
    "rootDir": "./src", // ✅ Source files location
    "module": "NodeNext", // ✅ Needed for ES module compatibility
    "moduleResolution": "NodeNext", // ✅ Ensures correct import resolution
    "declaration": true, // ✅ Generate .d.ts files
    "emitDeclarationOnly": false, // ✅ Generate JS & types
    "esModuleInterop": true, // ✅ Allows CommonJS imports
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
